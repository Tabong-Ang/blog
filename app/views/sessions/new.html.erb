<div data-slot="card" class="bg-card text-card-foreground flex flex-col gap-6 rounded-xl border py-6 shadow-sm w-full max-w-md mx-auto mt-12">
    <div data-slot="card-header" class="@container/card-header grid auto-rows-min grid-rows-[auto_auto] items-start gap-2 px-6 space-y-1">
        <div data-slot="card-title" class="text-2xl font-bold">Login</div>
        <div data-slot="card-description" class="text-muted-foreground text-sm">Enter your email and password to access your account</div>
    </div>

    <div data-slot="card-content" class="px-6">
        <%= form_with url: session_path, scope: :session, local: true do |f| %>
        <div class="space-y-2">
            <%= f.label :email, "Email", class: "flex items-center gap-2 text-sm leading-none font-medium select-none" %>
            <%= f.email_field :email, placeholder: "you@example.com", required: true, class: "file:text-foreground placeholder:text-muted-foreground selection:bg-primary selection:text-primary-foreground dark:bg-input/30 border-input h-9 w-full rounded-md border bg-transparent px-3 py-1 text-base shadow-xs transition-[color,box-shadow] outline-none disabled:pointer-events-none disabled:cursor-not-allowed disabled:opacity-50 md:text-sm focus-visible:border-ring focus-visible:ring-ring/50 focus-visible:ring-[3px]" %>
        </div>

        <div class="space-y-2">
            <%= f.label :password, "Password", class: "flex items-center gap-2 text-sm leading-none font-medium select-none" %>
            <%= f.password_field :password, placeholder: "••••••••", required: true, class: "file:text-foreground placeholder:text-muted-foreground selection:bg-primary selection:text-primary-foreground dark:bg-input/30 border-input h-9 w-full rounded-md border bg-transparent px-3 py-1 text-base shadow-xs transition-[color,box-shadow] outline-none disabled:pointer-events-none disabled:cursor-not-allowed disabled:opacity-50 md:text-sm focus-visible:border-ring focus-visible:ring-ring/50 focus-visible:ring-[3px]" %>
        </div>

        <%= f.submit "Login", class: "inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium transition-all disabled:pointer-events-none disabled:opacity-50 [&_svg]:pointer-events-none [&_svg:not([class*='size-'])]:size-4 shrink-0 [&_svg]:shrink-0 outline-none focus-visible:border-ring focus-visible:ring-ring/50 focus-visible:ring-[3px] bg-primary text-primary-foreground hover:bg-primary/90 h-9 px-4 py-2 has-[>svg]:px-3 w-full" %>
        <% end %>

        <div class="mt-4 text-center text-sm">
            Don't have an account?
            <%= link_to "Sign up", signup_path, class: "text-primary underline-offset-4 hover:underline" %>
        </div>
    </div>
</div>
<div class="min-h-screen bg-background">
    <div class="container mx-auto px-4 py-8">
        <% if @articles.present? %>
        <div class="mb-8">
            <h1 class="text-4xl font-bold tracking-tight">All Blogs</h1>
            <p class="mt-2 text-muted-foreground">Discover stories from our community</p>
        </div>
        <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
            <div data-slot="card" class="bg-card text-card-foreground gap-6 rounded-xl border py-6 shadow-sm flex flex-col overflow-hidden">
                <div class="relative h-48 w-full overflow-hidden bg-muted"><img alt="Tabong" loading="lazy" decoding="async" data-nimg="fill" class="object-cover" src="https://www.philipstek.com" style="position: absolute; height: 100%; width: 100%; inset: 0px;"></div>
                <div data-slot="card-header" class="@container/card-header grid auto-rows-min grid-rows-[auto_auto] items-start gap-2 px-6 has-data-[slot=card-action]:grid-cols-[1fr_auto] [.border-b]:pb-6">
                    <div data-slot="card-title" class="leading-none font-semibold line-clamp-2">Tabong</div>
                    <div data-slot="card-description" class="text-muted-foreground text-sm">By Tabong Philip</div>
                </div>
                <div data-slot="card-content" class="px-6 flex-1">
                    <p class="line-clamp-3 text-sm text-muted-foreground">First blog</p>
                    <p class="mt-4 text-xs text-muted-foreground">29/10/2025</p>
                </div>
            </div>
        </div>
        <% else %>
        <div class="container mx-auto px-4 py-8">
            <div class="mb-8">
                <h1 class="text-4xl font-bold tracking-tight">All Blogs</h1>
                <p class="mt-2 text-muted-foreground">Discover stories from our community</p>
            </div>
            <div class="flex flex-col items-center justify-center py-12">
                <p class="text-lg text-muted-foreground">No blogs yet. Be the first to create one!</p><a data-slot="button" class="inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium transition-all disabled:pointer-events-none disabled:opacity-50 [&amp;_svg]:pointer-events-none [&amp;_svg:not([class*='size-'])]:size-4 shrink-0 [&amp;_svg]:shrink-0 outline-none focus-visible:border-ring focus-visible:ring-ring/50 focus-visible:ring-[3px] aria-invalid:ring-destructive/20 dark:aria-invalid:ring-destructive/40 aria-invalid:border-destructive bg-primary text-primary-foreground hover:bg-primary/90 h-9 px-4 py-2 has-[&gt;svg]:px-3 mt-4" href="/blogs/new">Create Blog</a>
            </div>
        </div>
        <% end %>
    </div>
</div>